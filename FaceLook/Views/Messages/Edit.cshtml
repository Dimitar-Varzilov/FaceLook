@model MessageViewModel

<h4>MessageViewModel</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="@nameof(MessagesController.EditMessage)">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="CreatedAt" type="hidden" value="@Model.CreatedAt" />
			<input asp-for="Id" type="hidden" value="@Model.Id" />
			<input asp-for="MessageStatus" type="hidden" value="@Model.MessageStatus" />
			<input asp-for="ModifiedAt" type="hidden" value="@Model.ModifiedAt" />
			<input asp-for="ModifiedBy" type="hidden" value="@Model.ModifiedBy" />
			<input asp-for="ReceiverId" type="hidden" value="@Model.ReceiverId" />
			<input asp-for="SenderId" type="hidden" value="@Model.SenderId" />
			<div class="form-group">
				<label asp-for="Content" class="control-label"></label>
				<input asp-for="Content" class="form-control" />
				<span asp-validation-for="Content" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
