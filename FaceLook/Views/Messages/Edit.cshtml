@model MessageViewModel

@{
    ViewData["Title"] = "Edit Message";
}

<div class="container mt-5">
    <div class="glass-card">
        <div class="mb-4">
            <h2 class="text-white">
                <i class="bi bi-pencil-square"></i> Edit Message
            </h2>
            <p class="text-white opacity-75">Update your message content</p>
        </div>
        
        <hr style="border-color: rgba(255, 255, 255, 0.2);" />
        
        <div class="row">
            <div class="col-md-8">
                <form asp-action="@nameof(MessagesController.EditMessage)">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger glass-card mb-3"></div>
                    
                    <input asp-for="CreatedAt" type="hidden" value="@Model.CreatedAt" />
                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                    <input asp-for="MessageStatus" type="hidden" value="@Model.MessageStatus" />
                    <input asp-for="ModifiedAt" type="hidden" value="@Model.ModifiedAt" />
                    <input asp-for="ModifiedBy" type="hidden" value="@Model.ModifiedBy" />
                    <input asp-for="ReceiverId" type="hidden" value="@Model.ReceiverId" />
                    <input asp-for="SenderId" type="hidden" value="@Model.SenderId" />
                    
                    <div class="mb-4">
                        <label asp-for="Content" class="form-label text-white mb-2">
                            <i class="bi bi-chat-text"></i> Message Content
                        </label>
                        <textarea asp-for="Content" 
                                  class="form-control glass-input" 
                                  rows="5"
                                  placeholder="Update your message..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn glass-button">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn glass-button">
                            <i class="bi bi-arrow-left"></i> Back to Messages
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
