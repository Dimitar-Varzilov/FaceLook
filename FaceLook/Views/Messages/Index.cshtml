@model IEnumerable<MessageViewModel>
@using FaceLook.Services.Extensions
@using FaceLook.Common.Constants

@{
	ViewData["Title"] = "Messages";
	var currentUserId = User.GetUserId();
}

<div class="container-glass">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="text-white">
			<i class="bi bi-chat-dots-fill"></i> Your Messages
		</h1>
		<a asp-action="@nameof(MessagesController.Create)" class="btn glass-button">
			<i class="bi bi-plus-circle"></i> New Message
		</a>
	</div>

	@if (TempData[ErrorConstants.ErrorKey] != null)
	{
		<div class="alert alert-danger glass-card">
			@TempData[ErrorConstants.ErrorKey]
		</div>
	}

	@if (!Model.Any())
	{
		<div class="glass-card text-center py-5 text-white-50">
			<i class="bi bi-chat-square-dots" style="font-size:3rem;"></i>
			<p class="mt-3">No messages yet. <a asp-action="@nameof(MessagesController.Create)" class="text-info">Send one!</a></p>
		</div>
	}
	else
	{
		<div class="table-responsive">
			<table class="table table-glass text-white">
				<thead>
					<tr>
						<th><i class="bi bi-person-fill"></i> From</th>
						<th><i class="bi bi-person-check-fill"></i> To</th>
						<th><i class="bi bi-file-text"></i> @Html.DisplayNameFor(model => model.Content)</th>
						<th><i class="bi bi-info-circle"></i> Status</th>
						<th><i class="bi bi-calendar-plus"></i> @Html.DisplayNameFor(model => model.CreatedAt)</th>
						<th><i class="bi bi-gear"></i> Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@if (item.SenderId == currentUserId)
								{
									<span class="badge bg-primary">You</span>
								}
								else
								{
									<span>@(item.SenderEmail)</span>
								}
							</td>
							<td>
								@if (item.ReceiverId == currentUserId)
								{
									<span class="badge bg-success">You</span>
								}
								else
								{
									<span>@(item.ReceiverEmail)</span>
								}
							</td>
							<td>@Html.DisplayFor(modelItem => item.Content)</td>
							<td>
								<span class="badge @(item.MessageStatus.ToString() == "New" ? "bg-info" : "bg-secondary")">
									@item.MessageStatus
								</span>
							</td>
							<td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
							@if (currentUserId == item.SenderId)
							{
								<td>
									<a asp-action="@nameof(MessagesController.Edit)"
										   asp-route-id="@item.Id"
										   class="btn btn-sm glass-button me-2">
										<i class="bi bi-pencil"></i> Edit
									</a>
									<button type="button"
											class="delete-trigger btn btn-sm btn-danger"
											data-id="@item.Id">
										<i class="bi bi-trash"></i> Delete
									</button>
								</td>
							}
							else
							{
								<td><span class="text-white-50">â€”</span></td>
							}
						</tr>
					}
				</tbody>
			</table>
		</div>
	}
</div>

<!-- Modern Glass Modal -->
<div id="deleteModal" class="modal-glass" style="display:none; position:fixed; z-index:9999; left:0; top:0; width:100%; height:100%;">
	<div style="display:flex; align-items:center; justify-content:center; height:100%;">
		<div class="glass-card" style="max-width:400px; text-align:center;">
			<div class="mb-3">
				<i class="bi bi-exclamation-triangle" style="font-size:3rem; color:#f5576c;"></i>
			</div>
			<h4 class="text-white mb-3">Are you sure?</h4>
			<p class="text-white">This action is permanent and cannot be undone.</p>

			<form asp-action="@nameof(MessagesController.Delete)" method="post">
				@Html.AntiForgeryToken()
				<input type="hidden" name="id" id="modalItemId" value="" />
				
				<div class="mt-4">
					<button type="button" onclick="closeModal()" class="btn glass-button me-2">
						<i class="bi bi-x-circle"></i> Cancel
					</button>
					<button type="submit" class="btn btn-danger">
						<i class="bi bi-trash"></i> Confirm Delete
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	"use strict";
	
	function closeModal() {
		const modal = document.getElementById('deleteModal');
		if (modal) modal.style.display = 'none';
	}

	function openModal(id) {
		const modal = document.getElementById('deleteModal');
		const input = document.getElementById('modalItemId');
		if (input && modal) {
			input.value = id;
			modal.style.display = 'block';
		}
	}

	window.onclick = (event) => {
		const modal = document.getElementById('deleteModal');
		if (event.target === modal) closeModal();
	};

	document.addEventListener('click', (event) => {
		const target = event.target.closest('.delete-trigger');
		if (target) {
			const id = target.getAttribute('data-id');
			if (id) openModal(id);
		}
	});
</script>
