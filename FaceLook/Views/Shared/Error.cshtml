@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="glass-card text-center">
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle" style="font-size: 5rem; color: #f5576c;"></i>
        </div>
        
        <h1 class="text-white mb-3">
            <i class="bi bi-x-circle"></i> Oops! Something Went Wrong
        </h1>
        
        <h2 class="text-white opacity-75 mb-4">
            An error occurred while processing your request
        </h2>

        @if (Model.ShowRequestId)
        {
            <div class="glass-card mb-4" style="background: rgba(245, 87, 108, 0.2);">
                <p class="text-white mb-2">
                    <strong><i class="bi bi-info-circle"></i> Request ID:</strong>
                </p>
                <code class="text-white" style="font-size: 1.1rem; background: rgba(0,0,0,0.3); padding: 8px 16px; border-radius: 8px;">
                    @Model.RequestId
                </code>
            </div>
        }

        <div class="glass-card" style="background: rgba(255, 255, 255, 0.15); text-align: left;">
            <h3 class="text-white mb-3">
                <i class="bi bi-wrench"></i> Development Information
            </h3>
            <p class="text-white mb-3">
                Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
            </p>
            <div class="alert alert-warning" style="background: rgba(255, 193, 7, 0.3); border: 1px solid rgba(255, 193, 7, 0.5);">
                <p class="text-white mb-2">
                    <strong><i class="bi bi-shield-exclamation"></i> Security Warning:</strong>
                </p>
                <p class="text-white mb-0">
                    The Development environment shouldn't be enabled for deployed applications.
                    It can result in displaying sensitive information from exceptions to end users.
                </p>
            </div>
            <p class="text-white mt-3 mb-0">
                <strong>To enable development mode:</strong><br/>
                Set the <code style="background: rgba(0,0,0,0.3); padding: 4px 8px; border-radius: 4px;">ASPNETCORE_ENVIRONMENT</code> 
                environment variable to <code style="background: rgba(0,0,0,0.3); padding: 4px 8px; border-radius: 4px;">Development</code> 
                and restart the application.
            </p>
        </div>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn glass-button btn-lg">
                <i class="bi bi-house"></i> Return to Home
            </a>
        </div>
    </div>
</div>
