@using FaceLook.Services.Extensions
@{
    string alowedPictureTypes = PictureConstants.AllowedExtensions.Aggregate((prev, curr) => $"{prev}, {curr}");
    string controllerName = ControllersExtensions.GetControllerName<PicturesController>();
    ViewData["Title"] = "Upload Photo";
}

<div class="container mt-5">
    <div class="glass-card">
        <div class="mb-4">
            <h2 class="text-white">
                <i class="bi bi-cloud-upload"></i> Upload Photo
            </h2>
            <p class="text-white opacity-75">Share your moments with the community</p>
        </div>
        
        <hr style="border-color: rgba(255, 255, 255, 0.2);" />
        
        <div class="row">
            <div class="col-md-8">
                <form asp-controller="@controllerName" 
                      asp-action="@nameof(PicturesController.UploadPicture)" 
                      method="post" 
                      enctype="multipart/form-data">
                    
                    <div class="mb-4">
                        <label class="form-label text-white mb-3">
                            <i class="bi bi-image"></i> Select Photo
                        </label>
                        <div class="glass-input" style="padding: 2rem; text-align: center;">
                            <input type="file" 
                                   name="picture" 
                                   accept="@alowedPictureTypes" 
                                   class="form-control glass-input"
                                   id="pictureInput"
                                   style="background: rgba(255, 255, 255, 0.2);" />
                            <div class="mt-3 text-white opacity-75">
                                <small>
                                    <i class="bi bi-info-circle"></i> 
                                    Accepted formats: @alowedPictureTypes
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button class="btn glass-button" type="submit">
                            <i class="bi bi-upload"></i> Upload Photo
                        </button>
                        <a asp-controller="@controllerName" 
                           asp-action="Index" 
                           class="btn glass-button">
                            <i class="bi bi-arrow-left"></i> Back to Gallery
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Enhanced file input styling */
    input[type="file"]::file-selector-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    input[type="file"]::file-selector-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.25);
    }
</style>
