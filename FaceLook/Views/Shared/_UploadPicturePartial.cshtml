@using FaceLook.Services.Extensions
@{
	string alowedPictureTypes = PictureConstants.AllowedExtensions.Aggregate((prev, curr) => $"{prev}, {curr}");
	string controllerName = ControllersExtensions.GetControllerName<PicturesController>();
}

<form asp-controller="@controllerName" asp-action="@nameof(PicturesController.UploadPicture)" method="post" enctype="multipart/form-data">
	<input type="file" name="picture" accept="@alowedPictureTypes" />
	<button class="btn btn-primary" type="submit">Upload</button>
</form>
