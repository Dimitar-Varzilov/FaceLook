@model SendFriendRequestViewModel

<form asp-controller="Friends" asp-action="SendRequest" method="post">
	@Html.AntiForgeryToken()
	<div asp-validation-summary="ModelOnly" class="alert alert-danger glass-card mb-3"></div>
	<div class="input-group">
		<input asp-for="AddresseeEmail"
			   class="form-control"
			   placeholder="Enter friend's email address..." />
		<button type="submit" class="btn glass-button">
			<i class="bi bi-send"></i> Send Request
		</button>
	</div>
	<span asp-validation-for="AddresseeEmail" class="text-danger small"></span>
</form>
